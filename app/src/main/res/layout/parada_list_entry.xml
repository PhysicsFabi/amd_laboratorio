<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lista_parada_view">

    <TextView
        android:text="Hola Cristian =)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/paradaviewaddress"
        android:textStyle="normal|bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="@string/number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_label"
                android:textColor="#858484" />

            <TextView
                android:text="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paradaviewnumber" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="@string/partes_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/partes_label"
                android:textColor="#858484" />

            <TextView
                android:text="partes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paradaviewpartes" />

        </TableRow>

    </TableLayout>

</LinearLayout>